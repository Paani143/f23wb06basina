extends layout

block content
  h1= title
  -
    let results = [
      {
        "furniture_name" : "Chair",
        "furniture_specification" : "Large",
        "furniture_cost" : "50"
      },
      {
        "furniture_name" : "Desk",
        "furniture_specification" : "Medium",
        "furniture_cost" : "250"
      },
      {
        "furniture_name" : "Cabinet",
        "furniture_specification" : "Small",
        "furniture_cost" : "500"
      },
    ]
  div(class="container-fluid") 
    div(class="row")
      each item,index in results 
        div(class="col-sm-2") Name: #{item.furniture_name}
        div(class="col-sm-2") Specification: #{item.furniture_specification}
        div(class="col-sm-2") Cost: #{item.furniture_cost}